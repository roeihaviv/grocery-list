<li id="<%= dom_id(item) %>" class="list-group-item">
  <div>
    <%= item.item %>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="d-grid gap-2">
        <%= link_to move_item_path(item), class: "btn btn-link", method: :patch, remote: true do %>
          <% if item.cart? %>
            <i class="fa-sharp fa-solid fa-play"></i>
          <% elsif item.end_soon? %>
            <i class="fa-regular fa-circle-check"></i>
          <% else %>
            <i class="fa-sharp fa-solid fa-backward"></i>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="d-grid gap-2">
        <%= link_to edit_item_path(item), remote: true, class: "btn btn-link" do %>
          <i class="fa-sharp fa-solid fa-pen-to-square"></i>
        <% end %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="d-grid gap-2">
        <%= link_to item, method: :delete, remote: true, class: "btn btn-link" do %>
          <i class="fa-sharp fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    </div>
  </div>
</li>
